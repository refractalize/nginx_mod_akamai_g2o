         server_name  localhost;
 
         #charset koi8-r;
@@ -43,6 +45,27 @@
         location / {
             root   html;
             index  index.html index.htm;
+
+            location /download {
+                g2o                   on;
+                accesskey_hashmethod  md5;
+                accesskey_arg         "key";
+                accesskey_signature   "mypass";
+                g2o_nonce             "token";
+                g2o_key               "a_password";
+            }
+
+            location /allow_token1 {
+                g2o        on;
+                g2o_nonce  "token1";
+                g2o_key    "a_different_password";
+            }
+
+            location /allow_all {
+                g2o        off;
+                g2o_nonce  "token";
+                g2o_key    "a_password";
+            }
         }
 
         #error_page  404              /404.html;
