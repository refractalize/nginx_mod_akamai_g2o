--- nginx-1.0.5/prefix/conf/nginx.conf.default	2011-10-30 22:26:44.000000000 +0000
+++ nginx-1.0.5/prefix/conf/nginx.conf	2011-10-30 22:21:40.000000000 +0000
@@ -1,3 +1,4 @@
+daemon off;
 
 #user  nobody;
 worker_processes  1;
@@ -5,6 +6,7 @@
 #error_log  logs/error.log;
 #error_log  logs/error.log  notice;
 #error_log  logs/error.log  info;
+error_log  logs/error.log  debug;
 
 #pid        logs/nginx.pid;
 
@@ -33,7 +35,7 @@
